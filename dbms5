
 	(SELECT DISTINCT P.PNO 
FROM PROJECT P, DEPARTMENT D, EMPLOYEE 
 	E WHERE E.DNO=D.DNO  	AND D.MGRSSN=E.SSN 
 	AND E.LNAME=’SCOTT’)  	UNION 
 	(SELECT DISTINCT P1.PNO 
FROM PROJECT P1, WORKS_ON W, EMPLOYEE E1  	WHERE P1.PNO=W.PNO 
 	AND E1.SSN=W.SSN 
AND E1.LNAME=’SCOTT’); 



 	(SELECT DISTINCT P.PNO 
FROM PROJECT P, DEPARTMENT D, EMPLOYEE 
 	E WHERE E.DNO=D.DNO  	AND D.MGRSSN=E.SSN 
 	AND E.LNAME=’SCOTT’)  	UNION 
 	(SELECT DISTINCT P1.PNO 
FROM PROJECT P1, WORKS_ON W, EMPLOYEE E1  	WHERE P1.PNO=W.PNO 
 	AND E1.SSN=W.SSN 
AND E1.LNAME=’SCOTT’); 

SELECT SUM (E.SALARY), MAX (E.SALARY), MIN (E.SALARY), 
 	AVG (E.SALARY) 
 	FROM EMPLOYEE E, DEPARTMENT D  	WHERE E.DNO=D.DNO 
 	AND D.DNAME=’ACCOUNTS’; 



 	SELECT E.FNAME, E.LNAME 
 	FROM EMPLOYEE E 
 	WHERE NOT EXISTS (SELECT DISTINCT * 
FROM PROJECT P, WORKS_ON W 
 	WHERE W.PNO=P.PNO AND P.DNO= 5 
AND NOT EXISTS (SELECT * 
                                 FROM WORKS_ON W1 
 	    WHERE E.SSN=W1.SSN AND W1.PNO=W.PNO)); 

SELECT D.DNO, COUNT (*) 
 	FROM DEPARTMENT D, EMPLOYEE E 
 	WHERE D.DNO=E.DNO 
 	AND E.SALARY>600000 
 	AND D.DNO IN (SELECT E1.DNO 
 	FROM EMPLOYEE E1 
 	GROUP BY E1.DNO 
 	HAVING COUNT (*)>5) 
 	GROUP BY D.DNO; 

